<h1>New post</h1>
 <%= include_tiny_mce_if_needed %>

<% @post.categories.build if @post.categories.empty? %> 
<% form_for @post,:html => { :multipart => true } do |f| %>

  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
      <% f.fields_for :categories do |b| %>  
	<p>  <%= b.label :name, 'Category:' %><br />  
	     <%= b.text_field :name %>  
         </p> 
   <% unless b.object.nil? || b.object.new_record? %> 
   <p>  <%= b.label :_delete, 'Remove:'  %>  
	<%= b.check_box :_delete %>  
   </p>  
  <% end %>  
  <% end %> 

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => "mceEditor" %>
  </p>
  <p>
	Tag <br />
	<%= f.text_field :tag_list %> <br />
  </p>

   <p>
   Upload your picture: <br />
   <%= f.file_field :photo %>
   </p>
  <p>
    <%= f.submit 'Create' %>
  </p>


<% end %>

<%= link_to 'Back', posts_path %>
